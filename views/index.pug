        // Fetch the css archive
        script.
            // JavaScript for fetching data and showing/hiding the spinner
            document.addEventListener('DOMContentLoaded', function() {
                // Show the loading spinner
                document.getElementById('loading').style.display = 'flex';
    
                // Fetch the style.html file and extract the CSS
                // Core theme CSS (includes Bootstrap)
                fetch('css/style.html')
                    .then(response => response.text())
                    .then(data => {
                        // Create a new style element
                        const style = document.createElement('style');
                
                        // Extract the CSS between <style> tags
                        const cssMatch = data.match(/<style[^>]*>([\s\S]*?)<\/style>/);
                        if (cssMatch && cssMatch[1]) {
                            style.innerHTML = cssMatch[1]; // Set the inner HTML to the extracted CSS
                            document.head.appendChild(style); // Append the style to the head
                        }
                    })
                    .catch(error => console.error('Error loading style:', error))
                    .finally(() => {
                        // Hide the loading spinner
                        setTimeout(() => {
                            document.getElementById('loading').remove(); // Remove the spinner
                            document.getElementById('content').style.display = 'block'; // Show the content
                        }, 750);
                    });
            });        

