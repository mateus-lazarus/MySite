  body(style="overflow-y: visible;")
    #preloader(style="display: none;")
      #status.la-ball-triangle-path(style="display: none;")
        div
        div
        div
    .page-border(data-wow-duration="0.7s" data-wow-delay="0.2s")
      .top-border.wow.fadeInDown(style="visibility: visible; animation-name: fadeInDown;")
      .right-border.wow.fadeInRight(style="visibility: visible; animation-name: fadeInRight;")
      .bottom-border.wow.fadeInUp(style="visibility: visible; animation-name: fadeInUp;")
      .left-border.wow.fadeInLeft(style="visibility: visible; animation-name: fadeInLeft;")
    #wrapper
      header#banner.scrollto.clearfix(data-enllax-ratio=".5" tabindex="-1" style="background-position: center 415px;")
        #header.nav-collapse.sticky.fadeIn.animated.nav-solid.fadeInDown(style="position: fixed; z-index: 9999;")
          .row.clearfix
            .col-1
              #logo
                span#banner-logo(style="font-family: 'Aesthetic-Regular'; font-size: 3.6rem; padding: 0rem;" alt="Landing Page") Lazarus
                span#navigation-logo(style="font-family: 'Aesthetic-Regular'; font-size: 1.8rem; padding: 0.5rem 0rem 0rem 1rem;" alt="Landing Page") Lazarus
              aside
                ul.social-icons
                  li
                    a(target="_blank" title="LinkedIn" href="http://www.linkedin.com/in/mateus-lazarus")
                      i.fa.fa-linkedin.fa-2x
                      span LinkedIn
                  li
                    a(target="_blank" title="Github" href="http://www.github.com/mateus-lazarus")
                      i.fa.fa-github.fa-2x
                      span Github
                  li
                    a(target="_blank" title="Instagram" href="http://www.instagram.com/@mateuslazarusdev")
                      i.fa.fa-instagram.fa-2x
                      span Instagram
              nav#nav-main
                ul
                  li
                    a(href="/" class="") Home
                  li
                    a(href="./financial" class="active") Financial
                  li
                    a(href="./eletric") Eletric
                  li
                    a(href="./cloudcosts") Cloud Costs
                  li
                    a(href="/about-me") About the developer
              #nav-trigger
                span(style="padding-top: 0.47rem; font-size: 2rem;")
              nav#nav-mobile
                ul
                  li
                    a(href="/" class="") Home
                  li
                    a(href="./financial" class="active") Financial
                  li
                    a(href="./eletric") Eletric
                  li
                    a(href="./cloudcosts") Cloud Costs
                  li
                    a(href="/about-me") About the developer
        #banner-content.row.clearfix
          .col-38
            .section-heading
              h1 A SIMPLE AND ALL INCLUSIVE CALCULATOR
              h2
                b MyCalculator
                |  is a free calculator that will not have pop-ups and will bring together all yours needs
            a.button(href=".") See all options to calculate
      main#content
        section#about.introduction.scrollto(tabindex="-1")
          .row.clearfix
            div
              .section-heading
                h3 Help Us Serve You Better!
                h2.section-title Didn't find what you wanted?
                  br
                  | Submit what you want via the form at the bottom of the page. We'll deliver your solution within 24 hours!
        section#about.introduction.scrollto(tabindex="-1")
          .row.clearfix(style="margin-bottom: 4rem; padding-bottom: 0;")
            div
              .section-heading
                h3 Compound Interests
                h2.section-heading Params
                form(action="" method="post" style="text-align: left;")
                  div(style="display: flex; align-items: center; margin-bottom: 1rem;")
                    label(for="initial-value" style="font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 18px; font-weight: 400; color: #111; padding: 0.2rem; margin-right: 1rem; min-width: 150px;") Initial Value
                    input#initial-value(type="number" name="initial-value" required style="width: 12rem; padding: 0.5rem;")
                  div(style="display: flex; align-items: center; margin-bottom: 1rem;")
                    label(for="interest-rate" style="font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 18px; font-weight: 400; color: #111; padding: 0.2rem; margin-right: 1rem; min-width: 150px;") Interest Rate
                    input#interest-rate(type="number" name="interest-rate" required style="width: 12rem; padding: 0.5rem;")
                  div(style="display: flex; align-items: center; margin-bottom: 1rem;")
                    label(for="time" style="font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 18px; font-weight: 400; color: #111; padding: 0.2rem; margin-right: 1rem; min-width: 150px;") Time
                    input#time(type="number" name="time" required style="width: 12rem; padding: 0.5rem;")
                  button.custom-buttom-style(type="submit" style="padding: 0.5rem 1rem; font-size: 16px;") Calculate
        section#about.introduction.scrollto(tabindex="-1")
          .row.clearfix(style="padding-top: 0;")
            div
              .section-heading
                h2.section-heading Results
                ul(style="font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 18px; font-weight: 400; color: #111; padding: 0.5rem 2rem; border-radius: 1rem; box-shadow: rgba(0, 0, 0, .2) 0 3px 5px -1px,rgba(0, 0, 0, .14) 0 6px 10px 0,rgba(0, 0, 0, .12) 0 1px 18px 0; display: inline-grid;")
                  li
                    span Initial Value: 11
                  li
                    span Interest Rate: 11
                  li
                    span Time: 11
                  li
                    span Final Value: 11
        section#about.introduction.scrollto(tabindex="-1")
          .row.clearfix(style="padding-bottom: 0;")
            div
              .section-heading
                h2.section-title Help Us Serve You Better!
          form(action="" method="post" style="max-width: 500px; margin: auto;")
            div(style="margin-bottom: 1rem;")
              label(for="client-email" style="display: block; font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 16px; font-weight: 600; color: #111; margin-bottom: 0.5rem;") Client Email
              input#client-email(type="email" name="client-email" required style="width: 100%; padding: 0.5rem; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;")
            div(style="margin-bottom: 1rem;")
              label(for="email-options" style="display: block; font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 16px; font-weight: 600; color: #111; margin-bottom: 0.5rem;") Email Options
              select#email-options(name="email-options" required style="width: 100%; padding: 0.5rem; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;")
                option(value="bug-report") Bug Report
                option(value="suggestion") Suggestion
                option(value="other") Other
            div(style="margin-bottom: 1rem;")
              label(for="message" style="display: block; font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 16px; font-weight: 600; color: #111; margin-bottom: 0.5rem;") Message
              textarea#message(name="message" rows="4" required style="width: 100%; padding: 0.5rem; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;")
            button.custom-buttom-style(type="submit" style="padding: 0.5rem 1rem; font-size: 16px;") Submit
      footer(style="text-align: center; padding: 1rem; background-color: #f8f8f8; font-family: 'Open Sans', sans-serif, Arial, Helvetica; font-size: 14px;")
        p#copyright.col-2 Copyright by 
          a(href="/about-me") Mateus Lazarus Inc @ 2025
        p#copyright.col-2(style="text-align: end;")
          a(href="mailto:contact@mateuslazarus.com") Contact: contact@mateuslazarus.com

