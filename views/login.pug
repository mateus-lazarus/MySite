doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Login Page
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        style.
            body {
                height: 100vh;
                background: linear-gradient(45deg, #1c1c1c, #2e2e2e);
                background-size: 200% 200%;
                animation: gradientMove 5s ease infinite;
                display: flex;
                justify-content: center;
                align-items: center;
                overflow: hidden;
                position: relative;
            }
            @keyframes gradientMove {
                0% { background-position: 0% 50%; }
                50% { background-position: 100% 50%; }
                100% { background-position: 0% 50%; }
            }
            h1 {
                text-align: center;
                font-size: 3rem;
                color: white;
                margin-bottom: 2rem;
                z-index: 1;
            }
            form {
                background-color: rgba(255, 255, 255, 0.2);
                padding: 2rem;
                border-radius: 10px;
                max-width: 500px;
                width: 100%;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                z-index: 1;
            }
            input {
                margin-bottom: 1rem;
                width: 100%;
            }
            .bg-effect {
                position: absolute;
                width: 5rem;
                height: 5rem;
                background: radial-gradient(circle, rgba(255,255,255,0.3), transparent 70%);
                border-radius: 50%;
                pointer-events: none;
                z-index: 0;
                opacity: 0;
                transition: opacity 0.1s ease;
            }

    body
        .bg-effect(id="bg-effect")
        div.row.m-5
            h1.text-secondary Login Page
            .container
                form(action="/authenticate" method="POST" class="d-flex flex-column")
                    div.form-group
                        label.text-white(for="emailOrPhone") Email or Phone
                        input#emailOrPhone(type="text" class="form-control" placeholder="Enter email or phone" required)
                    div.form-group
                        label.text-white(for="password") Password
                        input#password(type="password" class="form-control" placeholder="Enter password" required)
                    button.btn.btn-success.btn-block(type="submit") Login

                    
        script.
            const bgEffect = document.getElementById('bg-effect');
            
            document.body.addEventListener('mousemove', function(e) {
                bgEffect.style.opacity = 1;
                bgEffect.style.left = `${e.clientX - bgEffect.offsetWidth / 2}px`;
                bgEffect.style.top = `${e.clientY - bgEffect.offsetHeight / 2}px`;
            });

            document.body.addEventListener('mouseleave', function() {
                bgEffect.style.opacity = 0;
            });
